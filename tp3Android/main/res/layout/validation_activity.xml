<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recap"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupStatut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/radioApprouve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approuvé" />

            <RadioButton
                android:id="@+id/radioRefuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refusé"
                android:layout_marginStart="12dp" />

            <RadioButton
                android:id="@+id/radioEnAttente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:checked="true"
                android:layout_marginStart="12dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/etCommentaires"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Commentaire (optionnel)"
            android:gravity="top|start"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:id="@+id/checkPrioritaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remboursement prioritaire"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Délai de traitement"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerDelai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAnnuler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Annuler" />

            <Button
                android:id="@+id/btnModifier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnValider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valider" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
